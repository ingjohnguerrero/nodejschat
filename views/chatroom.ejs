<!DOCTYPE HTML>
<html>
<head>
  <meta charset="utf-8">
  <title>Chat</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
  <link href="css/chat_style.css" rel="stylesheet" media="screen">
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  <script src="js/init.js"></script>
  <script type="text/javascript">
  CHAT.app_name = "chat";
  var data = {name:"<%= name %>",picture:"<%= picture %>"};
  CHAT.user = data;
  </script>
  <script src="js/jquery.dateFormat-1.0.js"></script>
  <script src="js/timeago.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/moment.js/2.1.0/moment.min.js"></script>
  <script src="js/chat.js"></script>
</head>
<body>
  <!-- Login Page -->
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <div id="mesagges_container" class="mesagges_container">
          <table class="table table-striped">
            <tbody id="messages"></tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <div id="typing" style="display:none"><span class="typing"></span> esta escribiendo</div>
      </div>
    </div>
    <div id="ChatFrame" class="row-fluid sendbar clearfix">
      <div class="span12">
        <form id="message">
         <input type="text" class="span11" name="text" id="user_text" required />
         <button type="submit" style="display:none" data-loading-text="Enviando...">Enviar</button>
         <a href="/logout" class="btn btn-danger pull-right">Salir</a>
       </form>
     </div>
  </div>

</div>
</body>
</html>