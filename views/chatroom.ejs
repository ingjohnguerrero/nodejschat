<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <title>Chat</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="css/chat_style.css" rel="stylesheet" media="screen">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript">
    window.CHAT = {app_name:"chat",user:{data:{name:"<%= name %>",picture:"<%= picture %>"}}};
    </script>
    <script src="js/jquery.dateFormat-1.0.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="js/chat.js"></script>
</head>
<body>
    <!-- Login Page -->
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <div class="mesagges_container">
                    <table class="table table-striped">
                        <tbody id="messages"></tbody>
                    </table>
                </div>
            </div>
        </div>
        <div id="ChatFrame" class="row-fluid sendbar clearfix">
            <div class="span11">
                <form id="message">
                   <input type="text" class="" style="width:100%" name="text" id="user_text" required />
                   <button type="submit" style="display:none" data-loading-text="Enviando...">Enviar</button>
               </form>
           </div>
           <div class="span1">
            <a href="/logout" class="btn btn-danger pull-right">Salir</a>
           </div>
       </div>

   </div>
</body>
</html>